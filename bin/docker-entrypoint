#!/bin/bash -e

# Imprimir informaÃ§Ãµes de inicializaÃ§Ã£o
echo "ğŸš€ Starting Time Register Application..."
echo "ğŸ“… $(date)"
echo "ğŸ  Environment: ${RAILS_ENV:-development}"
echo "ğŸ³ Container: $(hostname)"

# Habilitar jemalloc para reduzir uso de memÃ³ria e latÃªncia
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
    echo "ğŸ§  JeMalloc habilitado: $LD_PRELOAD"
fi

# Aguardar atÃ© que o banco de dados esteja pronto
if [ -n "$DATABASE_URL" ]; then
    echo "ğŸ” Aguardando banco de dados..."
    until ./bin/rails runner "ActiveRecord::Base.connection.execute('SELECT 1')" >/dev/null 2>&1; do
        echo "â³ Banco de dados ainda nÃ£o estÃ¡ pronto, aguardando 2 segundos..."
        sleep 2
    done
    echo "âœ… Banco de dados estÃ¡ pronto!"
fi

# Configurar banco de dados se executando rails server
if [ "${1}" = "./bin/rails" ] && [ "${2}" = "server" ]; then
    echo "ğŸ—„ï¸  Preparando banco de dados..."
    ./bin/rails db:prepare
    echo "âœ… Banco de dados preparado!"
fi

# Configurar banco de dados se executando solid_queue
if [ "${1}" = "./bin/rails" ] && [ "${2}" = "solid_queue:start" ]; then
    echo "ğŸ”„ Iniciando worker de jobs em segundo plano..."
fi

# Criar diretÃ³rios necessÃ¡rios
mkdir -p tmp/pids tmp/cache tmp/sockets log storage
chmod -R 755 tmp log storage

echo "ğŸ¯ Executando comando: $@"
exec "${@}"
